#include <VisualizationParameters.h>

VisualizationParameters(int c_r_detail,
			int c_h_detail,
			int c_tex,
			BSPMaterial* mat) :
  cylinder_r_detail(c_r_detail), cylinder_h_detail(c_h_detail), 
  cylinder_tex(c_tex), material(mat) {
  
}

int VisualizationParameters::getCylinderRDetail() {
  return cylinder_r_detail;
}

int VisualizationParameters::getCylinderHDetail() {
  return cylinder_h_detail;
}

int VisualizationParameters::getCylinderTexture() {
  return cylinder_tex;
}

int VisualizationParameters::getMaterial() {
  return material;
}
